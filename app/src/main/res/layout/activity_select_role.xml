<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/gradient"
    tools:context=".screens.SelectRole">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIRIDE"
        android:textColor="@color/blue"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/logo"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:gravity="center"
        android:background="@drawable/bg_style">
        <TextView
            android:id="@+id/textViewRoleSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Role"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_below="@id/textViewRoleSelection"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Business"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_below="@id/buttonUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</RelativeLayout>