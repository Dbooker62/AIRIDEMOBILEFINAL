<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".screens.BusinessProfile">

    <LinearLayout
        android:id="@+id/actionbar_businessProfile"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/blue"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">
        <ImageButton
            android:id="@+id/bck_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back"
            android:contentDescription="go back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Business Profile"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/actionbar_businessProfile"
        android:orientation="vertical">


            <TextView
                android:id="@+id/edit_profile_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:maxLines="1"
                android:padding="20dp"
                android:text="Edit Profile"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/forward"
                app:drawableTint="@color/blue" />


            <TextView
                android:id="@+id/change_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:maxLines="1"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:text="Change Password"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableTint="@color/blue"
                app:drawableEndCompat="@drawable/forward" />



            <TextView
                android:id="@+id/delete_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:maxLines="1"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:text="Delete Account"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/forward"
                app:drawableTint="@color/blue" />
        <TextView
            android:id="@+id/logout_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:maxLines="1"
            android:padding="20dp"
            android:layout_marginTop="15dp"
            android:text="Logout"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/forward"
            app:drawableTint="@color/blue" />

     </LinearLayout>
</RelativeLayout>